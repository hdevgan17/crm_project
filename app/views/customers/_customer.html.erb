<div class="customer-info box">
  <% if customer.image.present? %>
    <figure class="image is-128x128">
      <%= image_tag(customer.image.url, alt: customer.full_name) %>
    </figure>
  <% end %>

  <h2 class="title is-4"><%= customer.full_name %></h2>
  <p><strong>Phone Number:</strong> <%= customer.phone_number %></p>
  <p><strong>Email:</strong> <%= customer.email %></p>
  <p><strong>Notes:</strong> <%= customer.notes.present? ? customer.notes : 'No notes available.' %></p>
</div>
